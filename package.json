{
  "name": "inspirat",
  "description": "A new tab experience for Chrome in the style of Momentum.",
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes && del packages/**/dist && del node_modules",
    "build": "lerna run --stream build",
    "deploy": "lerna run --stream deploy",
    "start": "lerna run --stream start",
    "prebump": "lerna run --stream prebuild",
    "bump": "lerna version",
    "bump:beta": "lerna version prerelease --preid=beta",
    "release": "lerna publish from-git",
    "release:beta": "lerna publish from-git --npm-tag=canary",
    "prepare": "lerna bootstrap"
  },
  "devDependencies": {
    "@darkobits/ts-unified": "^1.6.0",
    "lerna": "^3.14.1"
  }
}
