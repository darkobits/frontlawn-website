{
  "version": "0.13.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "ci": true,
      "hoist": true
    },
    "version": {
      "allowBranch": [
        "master",
        "canary"
      ],
      "message": "chore(release): %v",
      "conventionalCommits": true,
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "gitTagVersion": true,
      "push": false
    },
    "publish": {
      "verifyAccess": false,
      "gitTagVersion": false,
      "push": false
    }
  }
}
