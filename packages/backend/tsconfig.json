{
  "extends": "../../node_modules/@darkobits/ts-unified/dist/config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {"*": ["*", "src/*"]},
    // [Serverless Best Practice] Emit nothing, including declaration files.
    // This reduces bundle size uploaded to AWS and thus reduces cold-start
    // times.
    "noEmit": true,
    "skipLibCheck": true
  }
}
